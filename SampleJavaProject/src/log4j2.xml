<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" strict="true" name="XMLConfigTest">
    <Properties>
        <!-- <Property name="logFile">src/mysql/query.log</Property> -->
        <Property name="rollingFile">src/logs/query.log</Property>
    </Properties>
    <Filter type="ThresholdFilter" level="trace" />
    <Appenders>
        <Console name="consoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n" disableAnsi="false" />
        </Console>
        <!-- <File name="fileAppender" fileName="${logFile}" append="false"> <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n" /> </File> -->
        <RollingFile name="rollingFileAppender" fileName="${rollingFile}" filePattern="src/logs/%d{yyyy-MM-dd}-%i-query.log" append="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5 MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="logger" level="DEBUG" additivity="false">
            <AppenderRef ref="consoleAppender" />
        </Logger>
        <Logger name="mysql" level="DEBUG" additivity="false">
            <AppenderRef ref="consoleAppender" />
            <AppenderRef ref="rollingFileAppender" />
        </Logger>
        <Logger name="mybatis.sakila" level="TRACE" additivity="false">
            <AppenderRef ref="consoleAppender" />
            <AppenderRef ref="rollingFileAppender" />
        </Logger>
        <Root level="INFO" additivity="false" />
    </Loggers>
</Configuration>